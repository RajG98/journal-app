pipeline {
    agent any
    
    environment{
        TARGET_DIR_FOR_DEV="C:\\apache-tomcat-11.0.8-windows-x64\\Tomcat11-DEV\\webapps"
        TARGET_DIR_FOR_QA='C:\\apache-tomcat-11.0.8-windows-x64\\Tomcat11-QA\\webapps'
    }

    stages {
        stage('Clone'){
            steps{
                git 'https://github.com/RajG98/journal-app.git'
            }
        }
        stage('Build') {
            steps {
                bat 'cd backend'
                bat "mvn clean package"
                

            }
        }
        stage('Copy to DEV') {
            steps {
                bat "xcopy target\\*.jar ${TARGET_DIR_FOR_DEV}"
            }
        }
        stage('Deploy') {
            steps {
                bat "sc stop Tomcat11-DEV"
                bat "ping -n 11 127.0.0.1 >nul"
                bat "sc start Tomcat11-DEV"
            }
        }
    }
    post{
        success {
            echo 'Pipeline successfully completed'
        }
        failure{
            echo 'Pipeline failed'
        }
    }
}